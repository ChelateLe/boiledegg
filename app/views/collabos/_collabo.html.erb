<div class= "post-wrapper">
  <%= link_to image_tag(collabo.image, class: :card_img ), collabo_path(collabo.id), method: :get %>
  <div class="post-body">
    <%= link_to collabo.title.truncate(10), collabo_path(collabo.id), method: :get, class: :"post_title red-text" %>
    <div class="post-text">
      <%= collabo.text.truncate(92) %>
    </div>
    <%= link_to "投稿者:" + collabo.painter.nickname, "/users/#{collabo.painter.id}", method: :get, class: :"post_user red-text" %>
    <br><%= link_to "発案者:" + collabo.originator.nickname, "/users/#{collabo.originator.id}", method: :get, class: :"post_user red-text" %>
  </div>
  <div id="like-<%= collabo.id %>", class="likes">
    <%= render partial: "collabos/like", locals: { collabo: collabo } %>
  </div>
</div>