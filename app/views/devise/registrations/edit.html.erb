<div class="edit">
  <h2>ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%# <%= render "devise/shared/error_messages", resource: resource %> 

  <div class="devise-image">
    <% if @user.image? %>
      <%= image_tag @user.image.thumb.url, class: "user-icon" %>
    <% else %>
      <%= image_tag "default.jpg", alt: "user-icon", size: "200", class: "user-icon" %>
    <% end %>
    <button type="button" class="btn btn-outline-secondary rounded-pill">
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "image-select-btn" %>
    </button>
  </div>

    <div class="field">
      <%= f.label :nickname, "ニックネーム(20文字以内)【必須】"  %> <em></em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス【必須】" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "パスワード(6文字以上)【必須】(変更しない場合は入力する必要はありません)" %> <i></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認のため、もう一度パスワードを入力してください【必須】" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password ,"現在のパスワード(編集を確定するため、変更前のパスワードを入力してください)"%> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "編集を確定！" %>
    </div>
  <% end %>

  <%# <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> 

  <%= link_to "編集せず戻る", :back %>
</div>
