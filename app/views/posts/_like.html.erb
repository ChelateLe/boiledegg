<% if Like.find_by(user_id: current_user.id, post_id: post.id) %>
  <%= link_to "/posts/#{post.id}/likes", class: "like-link", method: :delete, remote: true do%>
     <i class="fa fa-heart unlike-btn"></i> 
  <% end %>  
<% else %>
  <%= link_to "/posts/#{post.id}/likes", class: "like-link", method: :post, remote: true do%>
    <i class="fa fa-heart like-btn"></i>
  <% end %>  
<% end %>
<%= post.likes.length %>